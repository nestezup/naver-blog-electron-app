{
  "name": "naver-blog-electron-app",
  "version": "1.0.0",
  "description": "Naver Blog Electron application with webview and cookie authentication",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron src/main.js",
    "build-css": "npx @tailwindcss/cli -i ./src/input.css -o ./app/renderer/css/style.css",
    "build-css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./app/renderer/css/style.css --watch",
    "start": "npm run build-css && npm run dev",
    "dev:css": "npm run build-css:watch"
  },
  "keywords": [
    "electron",
    "naver",
    "blog",
    "webview"
  ],
  "author": "nest",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "daisyui": "5.1.13",
    "electron": "^28.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "firebase": "^12.3.0"
  }
}
